#tag ClassProtected Class CustomCellListboxInherits AlternatingList	#tag Event		Sub cellBackgroundPaint(g as graphics, row as integer, column as integer)		  if row>me.listcount-1 then return		  		  //if we have a custom cell, draw it.		  if me.selected(row) then gradient(g)		  		  if me.celltag(row,column) isa CustomListboxCell then		    customListboxCell(me.celltag(row,column)).cellPaint(g,row)		  end if		End Sub	#tag EndEvent	#tag Event		Function CellClick(row as Integer, column as Integer, x as Integer, y as Integer) As Boolean		  //if we clicked on a custom cell, forward the click to the cell		  if me.celltag(row,column) isa CustomListboxCell then		    if customListboxCell(me.celltag(row,column)).cellClick(x,y) then		      CustomCellClick(me.celltag(row,column))		      me.invalidateCell(row,column)		      'MsgBox str(row)		      return true		    else		      return CellClick(me.celltag(row,column))		    end if		  end if		End Function	#tag EndEvent	#tag Event		Function CompareRows(row1 as Integer, row2 as Integer, column as Integer, ByRef result as Integer) As Boolean		  //use the value from the custom cells when comparing rows.		  if me.celltag(row1,column) isa CustomListboxCell and me.celltag(row2,column) isa CustomListboxCell then		    result=CustomListboxCell(me.celltag(row1,column)).compareValue-CustomListboxCell(me.celltag(row2,column)).compareValue		    return true		  end if		End Function	#tag EndEvent	#tag Method, Flags = &h0		Sub customCell(row as integer, column as integer, assigns value as CustomListboxCell)		  //adds a custom cell to this listbox		  		  me.celltag(row,column)=value		  value.owner=self		End Sub	#tag EndMethod	#tag Method, Flags = &h1		Protected Sub gradient(g as graphics)		  dim i as integer, ratio, endratio as Double		  dim StartColor, EndColor, TopColor as Color		  		  // Pick our colors		  if me.Active = false or me.Enabled = false then		    StartColor = RGB(168, 168, 168)		    EndColor = RGB(121, 121, 121)		    TopColor = RGB(145, 145, 145)		  else		    StartColor = RGB(80, 171, 233)		    EndColor = RGB(0, 117, 215)		    TopColor = RGB(15, 145, 224)		  end if		  		  // Draw the gradient		  for i = 0 to g.Height		    		    // Determine the current line's color		    ratio = ((g.Height-i)/g.Height)		    endratio = (i/g.Height)		    g.ForeColor = RGB(EndColor.Red * endratio + StartColor.Red * ratio, EndColor.Green * endratio + StartColor.Green * ratio, EndColor.Blue * endratio + StartColor.Blue * ratio)		    		    // Draw the step		    g.DrawLine 0, i, g.Width, i		  next		  		  g.ForeColor = TopColor		  g.DrawLine 0, 0, g.Width, 0		End Sub	#tag EndMethod	#tag Hook, Flags = &h0		Event CellClick(Cell as CustomListboxCell) As boolean	#tag EndHook	#tag Hook, Flags = &h0		Event CustomCellClick(cell as CustomListboxCell)	#tag EndHook	#tag Note, Name = Info				CustomCellListbox		By Alex Restrepo		send comments, suggestions, fixes to alexrestrepo@mac.com				To add a custom cell to a cell, simply use the customCell(row,column) method.				Use in whatever way you like... at your own risk :P			#tag EndNote	#tag ViewBehavior		#tag ViewProperty			Name="AutoDeactivate"			Visible=true			Group="Appearance"			InitialValue="True"			Type="Boolean"			InheritedFrom="Listbox"		#tag EndViewProperty		#tag ViewProperty			Name="AutoHideScrollbars"			Visible=true			Group="Behavior"			InitialValue="True"			Type="Boolean"			InheritedFrom="Listbox"		#tag EndViewProperty		#tag ViewProperty			Name="Bold"			Visible=true			Group="Font"			Type="Boolean"			InheritedFrom="Listbox"		#tag EndViewProperty		#tag ViewProperty			Name="Border"			Visible=true			Group="Appearance"			InitialValue="True"			Type="Boolean"			InheritedFrom="Listbox"		#tag EndViewProperty		#tag ViewProperty			Name="ColumnCount"			Visible=true			Group="Appearance"			InitialValue="1"			Type="Integer"			InheritedFrom="Listbox